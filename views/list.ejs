<!DOCTYPE html>
<html>

  <% include partials/head %>

  <body>

  <% include partials/header %>
  <div class="container">
    <div class="jumbotron">
      <h1 align="center">CRUD</h1>
      <h2 align="center"> (JSON)</h2>
      <h2 align="center"> Create, Read, Update, Delete</h2>
    </div>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
      <th>ID</th>
      <th>String</th>
      <th>Integer</th>
      <th>Float</th>
      <th>Date</th>
      <th>Boolean</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
      <% console.log(data) %>
      <% if(data.length >=0) { %>
       <% for(var i = 0; i<data.length; i++) {%>
         <tr>
           <td> <%= data[i].id %> </td>
           <td> <%= data[i].string %> </td>
           <td> <%= data[i].integer %> </td>
           <td> <%= data[i].float %> </td>
           <td> <%= data[i].date %> </td>
           <td> <%= data[i].bool ? "True" : "False" %> </td>
           <td><a class="btn btn-success" href='/edit/<%= data[i].id %>'>Edit</a>
             <a class="btn btn-danger" href='/delete/<%= data[i].id %>' onclick="return confirm('Are you sure you want to delete this item?')">Delete</a></td>
        </tr>
        <% } %>
      <% } else { %>
        <p>no data</p>
      <% }%>
    </tbody>

  </table>
  <a class="btn btn-primary" href='/add'>Add</a>
  </form>

<% include partials/footer %>
